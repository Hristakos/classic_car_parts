<h1>All Listings</h1>
<%# <div > %>

<%# <form action="/">
<label for=""></label>
<input type="text" name="headline">
</form> %>
<div class="wrapper">
<% listings.each do |listing|%>

<a class="listings" href="/listings/<%= listing["id"]%>">
   <div class="listings-layout"> 
   
        <img class= "listings-img"src=<%= listing["img_url"]%> alt="">
   
        <div class="listings-details">
                <div class="listing-heading"> <%= listing["headline"] %> 
                
                 <div class="price"> <%= listing["price"]%></div>
                 </div>
                <div class="listings-description"><%= listing["description"]%> </div>
        </div>

        <div class="listings-suburb-date">
        <div class="suburb"><%= listing["suburb"]%></div>
        <div class="date-posted"><%=listing_timestamp_to_display(listing["post_date"])%></div>
        </div> 
</div>
</a>

       
<% end%>
</div>
     
<%# </div> %>

